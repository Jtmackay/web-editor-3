{
  "name": "web-editor",
  "private": true,
  "version": "0.0.4",
  "type": "module",
  "main": "electron/main.cjs",
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "preinstall": "node scripts/check-node.js",
    "dev": "vite --port 5180 --strictPort",
    "build": "vite build",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "electron": "electron .",
    "electron:watch": "wait-on http://localhost:5180 && cross-env NODE_ENV=development VITE_DEV_SERVER_URL=http://localhost:5180 nodemon -e js,cjs -w electron -x electron .",
    "electron:dev": "concurrently -k \"npm:dev\" \"npm:electron:watch\"",
    "predev": "node scripts/check-node.js",
    "prestart": "node scripts/check-node.js",
    "start": "concurrently -k \"npm:dev\" \"npm:electron:watch\"",
    "clean": "rimraf dist dist-electron .cache",
    "electron:build": "npm run build && electron-builder",
    "electron:pack": "npm run build && electron-builder --dir"
  },
  "dependencies": {
    "@monaco-editor/react": "^4.6.0",
    "basic-ftp": "^5.0.4",
    "electron-store": "^8.1.0",
    "lucide-react": "^0.294.0",
    "pg": "^8.11.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "zustand": "^4.4.7"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/pg": "^8.10.9",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "electron": "^27.1.3",
    "electron-builder": "^24.8.1",
    "cross-env": "^7.0.3",
    "nodemon": "^3.0.1",
    "rimraf": "^5.0.5",
    "eslint": "^8.55.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.3.6",
    "typescript": "^5.2.2",
    "vite": "^5.0.8",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.vscodeeditor.app",
    "productName": "Web Editor",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "node_modules/**/*"
    ],
    "mac": {
      "category": "public.app-category.developer-tools",
      "icon": "assets/editor.png",
      "target": [
        {
          "target": "dmg",
          "arch": ["arm64"]
        },
        {
          "target": "zip",
          "arch": ["arm64"]
        }
      ],
      "artifactName": "${productName}-${version}-mac-${arch}.${ext}"
    },
    "win": {
      "target": "nsis",
      "icon": "assets/favicon.ico"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/editor.png"
    }
  }
}
